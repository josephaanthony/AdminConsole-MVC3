}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>DesktopType</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DesktopCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DesktopCode)
            @Html.ValidationMessageFor(model => model.DesktopCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExtendedProperty)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExtendedProperty)
            @Html.ValidationMessageFor(model => model.ExtendedProperty)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
